<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.byui.maddldsdj">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />

        <activity android:name=".CatalogActivity"
                  android:label="@string/catalog_name"
                  android:parentActivityName=".SignInRegister" />

        <activity android:name=".VoteActivity" />

        <activity android:name=".dummy.TestView" />

        <activity android:name=".SignInRegister"
                  android:label="@string/signin_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SongActivity"
                  android:label="@string/song_name"
                  android:parentActivityName=".CatalogActivity" />

        <activity android:name=".ConvertSongListToCatalog" />

        <activity android:name=".PlayListActivity"
                  android:label="@string/playlist_name"
                  android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
                  android:parentActivityName=".CatalogActivity"/>

        <activity android:name=".SongPlayListActivity"
                  android:label="@string/song_name"
                  android:parentActivityName=".PlayListActivity" />

        <activity android:name=".RequestSubmission"
                  android:label="@string/request_name"></activity>
    </application>

</manifest>